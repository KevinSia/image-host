<div class="row">
  <div class="col-sm-offset-2 col-sm-10">
    <%= button_to "/auth/facebook", class: "btn btn-lg btn-block btn-facebook" do %>
      <%= icon("facebook", "Sign in with Facebook") %>
    <% end %>
  </div>
</div>

<div class="sign-in-method-separator row"></div>

<%= form_tag "/sign_in", class: "form-horizontal" do %>
  <div class="form-group row">
    <%= label_tag :email, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :email, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= label_tag :password, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Sign in", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
