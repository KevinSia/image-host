<%= form_for @post, html: {class: "post-form block-form form-horizontal"} do |f| %>
  <div class="form-group row">
    <%= f.label :image, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image, required: true, accept: "image/gif,image/jpeg,image/png" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="col-sm-offset-2">
    <%= f.submit nil, class: "btn btn-primary " %>
  </div>
<% end %>
